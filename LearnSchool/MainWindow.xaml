<Window x:Class="LearnSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        
        <Rectangle  Fill="#FF30A0FF"/>
        <Image Source="/Resources/school_logo.png" HorizontalAlignment="Left"/>
        <TextBlock Text="Школа языков 'Learn'" FontSize="20" FontWeight="Black" VerticalAlignment="Center" Background="#FF30A0FF" x:Name="TitlePage" HorizontalAlignment="Center"/>
        <Button x:Name="BackBtn" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="110 0 " Padding="4" Click="BackBtn_Click" Content="Назад"/>
        <Button x:Name="ExitBtn" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0 " Padding="4" Click="ExitBtn_Click" Content="Выход"/>

        <Frame Margin="0 15 0 10" Grid.Row="1" x:Name="MyFrame" VerticalAlignment="Top" HorizontalAlignment="Center" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
